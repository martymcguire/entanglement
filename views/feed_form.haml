%form.feed_form{:method => :post}
  - if defined?(form_method)
    %input{:type => :hidden, :name => '_method', :value => form_method}
  %p
    .label{:name => 'feed[url]'} URL:
    %input{:type => :text, :name => 'feed[url]', :value => f.url}
  %p
    .label{:name => 'feed[username]'} Username:
    %input{:type => :text, :name => 'feed[username]', :value => f.username}
  %p
    .label{:name => 'feed[password]'} Password:
    %input{:type => :password, :name => 'feed[password]', :value => f.password}
  %p
    .label{:name => 'feed[type]'} Type:
    %select{:name => 'feed[type]'}
      - [:basic, :trac].each do |t|
        %option{:value => t}= t.to_s.capitalize
  %input{:type => :submit, :value => (f.id.nil? ? 'Add' : 'Update') + ' this Feed'}
